// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  price       Float
  category    String
  image       String
  subcategory String
  rating      Float
  reviews     Int
}

model Category {
  id        Int     @id @default(autoincrement())
  name      String  @unique
  fromPrice Float
  image     String
  link      String
  description String?
}

model UIContent {
  id      Int     @id @default(autoincrement())
  key     String  @unique
  value   String
  group   String?
}
